<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.PerfilFragment"
    android:background="#FFFF"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImg_PerfilFragment"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/avatar"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/txt_nome_PerfilFragment"
        android:layout_width="309dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:drawablePadding="12dp"
        android:ems="10"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="16dp"
        android:textColor="#000"
        android:enabled="false"/>

    <TextView
        android:id="@+id/txt_email_PerfilFragment"
        android:layout_width="309dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:drawablePadding="12dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="16dp"
        android:textColor="#000"
        android:enabled="false"/>

    <Button
        android:id="@+id/btn_editar_PerfilFragment"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn2"
        android:text="Editar"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btn_sair_PerfilFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn2"
        android:textColor="#FFFF"
        android:textAllCaps="false"
       android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Sair"/>

</LinearLayout>